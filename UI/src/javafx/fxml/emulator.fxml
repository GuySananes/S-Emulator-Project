<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.controller.EmulatorController">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <HBox spacing="10">
                    <children>
                        <Button fx:id="loadFileButton" prefWidth="150" style="-fx-background-color: #8BC34A; -fx-text-fill: white;" text="Load File" />
                        <TextField fx:id="loadedFilePath" editable="false" promptText="Currently Loaded File path" style="-fx-background-color: #FFE0C4;" HBox.hgrow="ALWAYS" />
                        <!-- Added progress indicator + status label -->
                        <ProgressIndicator fx:id="loadProgress" prefWidth="30" prefHeight="30" progress="0.0" />
                        <Label fx:id="loadStatusLabel" text="Idle" />
                    </children>
                </HBox>
                <HBox spacing="10">
                    <children>
                        <ComboBox fx:id="programSelector" prefWidth="200" promptText="Program\function selector" style="-fx-background-color: #8BC34A; -fx-text-fill: white;" />
                        <Button fx:id="collapseButton" text="Collapse" />
                        <Label fx:id="currentDegreeLabel" style="-fx-background-color: #E0E0E0;" text="Current / Maximum degree">
                            <padding>
                                <Insets top="5" right="5" bottom="5" left="5" />
                            </padding>
                        </Label>
                        <Button fx:id="expandButton" text="Expand" />
                        <Button fx:id="highlightButton" prefWidth="150" text="Highlight selection" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <Label style="-fx-font-size: 18px;" text="Instructions table" />
                <TableView fx:id="instructionsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="#" />
                        <TableColumn text="B\S" />
                        <TableColumn text="Cycles" />
                        <TableColumn text="Instruction" />
                    </columns>
                </TableView>
                <Label fx:id="summaryLine" maxWidth="1.7976931348623157E308" prefHeight="40" style="-fx-background-color: #E0E0E0;" text="Summary line">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                </Label>
                <Label style="-fx-font-size: 18px;" text="Selected Instruction history chain" />
                <TextArea fx:id="historyChain" prefHeight="150" text="Selected Instruction history chain" />
            </children>
        </VBox>
    </center>
    <right>
        <VBox prefWidth="350" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <VBox spacing="10">
                    <children>
                        <Label style="-fx-font-size: 18px;" text="Debugger\Execution" />
                        <VBox spacing="5" style="-fx-background-color: #FFFF00;">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10" />
                            </padding>
                            <children>
                                <Label text="Debugger\Execution Commands:" />
                                <Button fx:id="startRegularButton" text="Start Regular Execution" />
                                <Button fx:id="startDebugButton" text="Start Debug Execution" />
                                <Button fx:id="stopButton" text="Stop" />
                                <Button fx:id="resumeButton" text="Resume" />
                                <HBox spacing="5">
                                    <children>
                                        <Button fx:id="stepOverButton" text="Step over" />
                                        <Button fx:id="stepBackButton" text="Step backward" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <HBox prefHeight="150" spacing="10">
                            <children>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Variables" />
                                        <TableView fx:id="variablesTable" prefHeight="120" />
                                    </children>
                                </VBox>
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label text="Execution Inputs" />
                                        <TextArea fx:id="executionInputs" prefHeight="120" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <VBox spacing="5">
                            <children>
                                <Label text="Cycles" />
                                <Label fx:id="cyclesLabel" style="-fx-font-size: 16px;" text="0" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
                <VBox spacing="10">
                    <children>
                        <Label style="-fx-font-size: 18px;" text="History\Statistics Table" />
                        <TableView fx:id="statisticsTable" VBox.vgrow="ALWAYS" />
                        <HBox spacing="10">
                            <children>
                                <Button fx:id="showStatsButton" text="Show" />
                                <Button fx:id="rerunButton" text="Re-run" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </right>
</BorderPane>
